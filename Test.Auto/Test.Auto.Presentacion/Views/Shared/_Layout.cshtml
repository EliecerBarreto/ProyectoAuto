        <nav class="navegacion" >
            <ul class="menu" >
                <!-- TITULAR -->
                <li class="title-menu">Todas las Categorías</li>
                <!-- TITULAR -->

                <li><a href="#"><span class="fa fa-car"></span>Autos</a></li>

                <li class="item-submenu" menu="1">
                    <a href="#"><span class="fa fa-car"></span>Autos Usados</a>
                    <ul class="submenu">
